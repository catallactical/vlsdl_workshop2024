<?xml version="1.0" encoding="UTF-8"?>
<document>
    <scene id="dyn_swap_scene_ejercicio1" name="DynSwapSceneEjercicio1">


		<!-- Ground plane -->
		<!-- ************ -->
		<part id="1">
            <filter type="objloader">
                <param type="string" key="filepath" value="helios_asset/sceneparts/groundplane.obj" />
            </filter>
            <filter type="scale">
                <param type="double" key="scale" value="120" />
            </filter>
			<filter type="translate">
				<param type="vec3" key="offset" value="50.0;0;0" />
			</filter>
        </part>




		<!-- Cylinder to Sphere -->
		<!-- ****************** -->
		<part id="2">
			<filter type="objloader">
                <param type="string" key="filepath" value="helios_asset/sceneparts/cylinder_nomat.obj" />
            </filter>
			<filter type="scale">
                <param type="double" key="scale" value="1.5" />
            </filter>
			<filter type="translate">
				<param type="vec3" key="offset" value="-10.0;-20.0;0" />
			</filter>
			<!-- Swap cylinder by sphere -->
			<swap>
				<filter type="objloader">
                	<param type="string" key="filepath" value="helios_asset/sceneparts/sphere_nomat.obj" />
		        </filter>
					<filter type="scale">
		            <param type="double" key="scale" value="1.5" />
		        </filter>
				<filter type="translate">
					<param type="vec3" key="offset" value="-10.0;-20.0;0" />
				</filter>
			</swap>
		</part>




		<!-- Cylinder to Cube -->
		<!-- ****************** -->
		<part id="3">
			<filter type="objloader">
                <param type="string" key="filepath" value="helios_asset/sceneparts/cylinder_nomat.obj" />
            </filter>
			<filter type="scale">
                <param type="double" key="scale" value="1.5" />
            </filter>
			<filter type="translate">
				<param type="vec3" key="offset" value="10.0;20.0;0" />
			</filter>
			<!-- Swap cylinder by sphere -->
			<swap>
				<filter type="objloader">
                	<param type="string" key="filepath" value="helios_asset/sceneparts/cube_nomat.obj" />
		        </filter>
					<filter type="scale">
		            <param type="double" key="scale" value="1.5" />
		        </filter>
				<filter type="translate">
					<param type="vec3" key="offset" value="10.0;20.0;0" />
				</filter>
			</swap>
		</part>
    </scene>
</document>
